{
    "name": "mobx-restful",
    "version": "0.3.0-alpha.0",
    "license": "LGPL-3.0",
    "author": "shiy2008@gmail.com",
    "description": "Common MobX 4/5 abstract base Class & Decorator utilities for RESTful API.",
    "keywords": [
        "mobx",
        "observable",
        "model",
        "restful",
        "api"
    ],
    "homepage": "https://ideapp.dev/MobX-RESTful/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/idea2app/MobX-RESTful.git"
    },
    "bugs": {
        "url": "https://github.com/idea2app/MobX-RESTful/issues"
    },
    "source": "source/index.ts",
    "types": "dist/index.d.ts",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "dependencies": {
        "@swc/helpers": "^0.2.14",
        "class-validator": "^0.13.1",
        "mobx": ">=4.0.0 <6.0.0",
        "reflect-metadata": "^0.1.13",
        "regenerator-runtime": "^0.13.9",
        "web-utility": "^2.9.6"
    },
    "devDependencies": {
        "@parcel/packager-ts": "^2.0.1",
        "@parcel/transformer-typescript-types": "^2.0.1",
        "husky": "^7.0.4",
        "lint-staged": "^12.0.2",
        "parcel": "^2.0.1",
        "prettier": "^2.4.1",
        "typedoc": "^0.22.9",
        "typescript": "~4.3.5"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{md,json,yml,ts}": "prettier --write"
    },
    "browserslist": "> 0.5%, last 2 versions, not dead",
    "targets": {
        "main": {
            "optimize": true
        }
    },
    "scripts": {
        "prepare": "husky install",
        "test": "lint-staged",
        "pack-docs": "typedoc source/",
        "build": "rm -rf dist/ docs/  &&  parcel build  &&  npm run pack-docs",
        "prepublishOnly": "npm test  &&  npm run build"
    }
}
