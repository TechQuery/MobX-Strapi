{
    "name": "mobx-restful",
    "version": "0.6.0-rc.4",
    "license": "LGPL-3.0",
    "author": "shiy2008@gmail.com",
    "description": "MobX SDK for RESTful API",
    "keywords": [
        "restful",
        "api",
        "mobx",
        "sdk",
        "model",
        "store",
        "state",
        "typescript"
    ],
    "homepage": "https://ideapp.dev/MobX-RESTful/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/idea2app/MobX-RESTful.git"
    },
    "bugs": {
        "url": "https://github.com/idea2app/MobX-RESTful/issues"
    },
    "source": "source/index.ts",
    "types": "dist/index.d.ts",
    "module": "dist/index.esm.js",
    "main": "dist/index.js",
    "dependencies": {
        "@swc/helpers": "^0.4.11",
        "class-validator": "^0.13.2",
        "koajax": "^0.8.0",
        "reflect-metadata": "^0.1.13",
        "regenerator-runtime": "^0.13.9",
        "web-utility": "^3.9.2"
    },
    "peerDependencies": {
        "mobx": ">=4 <6"
    },
    "devDependencies": {
        "@parcel/packager-ts": "^2.7.0",
        "@parcel/transformer-typescript-types": "^2.7.0",
        "@types/jest": "^28.1.8",
        "@types/node": "^14.18.26",
        "dotenv": "^16.0.1",
        "husky": "^8.0.1",
        "jest": "^29.0.0",
        "jest-environment-jsdom": "^29.0.0",
        "lint-staged": "^13.0.3",
        "mobx": "^5.15.7",
        "open-cli": "^7.0.1",
        "parcel": "^2.7.0",
        "prettier": "^2.7.1",
        "ts-jest": "^28.0.8",
        "typedoc": "^0.23.11",
        "typedoc-plugin-mdn-links": "^2.0.0",
        "typescript": "~4.8.2"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{md,ts,json,yml}": "prettier --write"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "jsdom",
        "transformIgnorePatterns": []
    },
    "browserslist": "> 0.5%, last 2 versions, not dead, IE 11",
    "targets": {
        "main": {
            "optimize": true
        }
    },
    "scripts": {
        "prepare": "husky install",
        "test": "lint-staged && jest",
        "build": "rm -rf dist/ docs/  &&  typedoc source/  &&  parcel build",
        "start": "typedoc source/  &&  open-cli docs/index.html",
        "prepublishOnly": "npm test  &&  npm run build"
    }
}
