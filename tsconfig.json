{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "useDefineForClassFields": true,
        "skipLibCheck": true,
        "lib": ["ES2023", "DOM", "DOM.Iterable"],
        "declaration": true,
        "outDir": "dist"
    },
    "include": ["source/*"],
    "typedocOptions": {
        "name": "MobX RESTful",
        "excludeExternals": true,
        "excludePrivate": true,
        "readme": "./ReadMe.md",
        "plugin": ["typedoc-plugin-mdn-links"]
    }
}
